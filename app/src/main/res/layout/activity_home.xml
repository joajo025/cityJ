<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center|top"
        android:text="CityFix"
        android:textSize="50dp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="28dp" />

    <CheckBox
        android:id="@+id/checkbox_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:gravity="bottom|start"
        android:onClick="onCheckboxClicked"
        android:text="Admin" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Filter errands and map" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkbox_safety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safety hazards" />

        <CheckBox
            android:id="@+id/checkbox_objects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broken objects" />

        <CheckBox
            android:id="@+id/checkbox_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graffiti/others" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkbox_nord"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Nordantill" />

        <CheckBox
            android:id="@+id/checkbox_gamla"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:text="Gamla staden" />

    </LinearLayout>

</LinearLayout>
